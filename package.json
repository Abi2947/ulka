{
  "name": "ulka",
  "version": "0.5.0",
  "description": "Ulka - static site generator",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "ulka": "./dist/bin/index.js"
  },
  "scripts": {
    "test": "jest",
    "build": "tsc",
    "eslint": "eslint \"**/*.ts\"",
    "eslint:fix": "eslint \"**/*.ts\" --fix",
    "prettier": "prettier \"**/*.ts\"",
    "prettier:write": "prettier --write \"**/*.ts\"",
    "lint-staged": "lint-staged",
    "prepublishOnly": "npm run build && npm run eslint && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ulkajs/ulka.git"
  },
  "keywords": [
    "generator",
    "website",
    "jekyll",
    "blog",
    "ssg"
  ],
  "author": "Roshan Acharya",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ulkajs/ulka/issues"
  },
  "homepage": "https://github.com/ulkajs/ulka#readme",
  "dependencies": {
    "better-opn": "^2.0.0",
    "chokidar": "^3.4.1",
    "colors": "^1.4.0",
    "commander": "^5.1.0",
    "gray-matter": "^4.0.2",
    "hast-util-raw": "^6.0.0",
    "portfinder": "^1.0.27",
    "rehype-stringify": "^8.0.0",
    "remark-parse": "^8.0.3",
    "remark-rehype": "^7.0.0",
    "ulka-parser": "^0.2.11-rc.3",
    "unified": "^9.2.0",
    "ws": "^7.3.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.10",
    "@types/node": "^14.6.0",
    "@types/remarkable": "^1.7.4",
    "@types/ws": "^7.2.6",
    "@typescript-eslint/eslint-plugin": "^4.2.0",
    "@typescript-eslint/parser": "^4.2.0",
    "eslint": "^7.9.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "jest": "^26.2.2",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "ts-jest": "^26.2.0",
    "typescript": "^3.9.7"
  },
  "lint-staged": {
    "*.{ts}": "eslint --cache --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-staged && npm run test"
    }
  }
}
